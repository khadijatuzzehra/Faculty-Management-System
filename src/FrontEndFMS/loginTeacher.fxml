         <image>
            <Image url="@../Images/homebg.png" />
         </image>
      </ImageView>
        <Button layoutX="534.0" layoutY="19.0" mnemonicParsing="false" onAction="#Status" style="-fx-background-radius: 20; -fx-background-color: #4d6091;" text="&lt;" textFill="#f8f6f6" />
